<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="8dp">
            <ImageView
                android:id="@+id/GambarJudul"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_toRightOf="@id/GambarJudul"
                android:id="@+id/txtdetail"
                style="@style/TextContent.Black"
                android:textSize="20sp"
                android:text="@string/judul"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="8dp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/remaks"
            style="@style/TextContent"
            android:text="@string/remarks"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/deskripsi"
            style="@style/TextContent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:lineSpacingMultiplier="1"
            android:text="@string/content_text"
            android:textColor="@android:color/black" />
        <TextView
            style="@style/TextContent.Subtitle"
            android:text="@string/keterangan"
            android:layout_marginBottom="8dp"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextSpec.Field"
                    android:text="@string/siswa"/>
                <TextView
                    android:id="@+id/siswa"
                    style="@style/TextSpec.Value"
                    android:text="@string/desc_siswa"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextSpec.Field"
                    android:text="@string/bonus"/>
                <TextView
                    android:id="@+id/bonus"
                    style="@style/TextSpec.Value"
                    android:text="@string/desc_bonus"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextSpec.Field"
                    android:text="@string/level"/>
                <TextView
                    android:id="@+id/level"
                    style="@style/TextSpec.Value"
                    android:text="@string/desc_level"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextSpec.Field"
                    android:text="@string/platform"/>
                <TextView
                    android:id="@+id/platform"
                    style="@style/TextSpec.Value"
                    android:text="@string/desc_platform"/>
            </TableRow>
        </TableLayout>
        <TextView
            style="@style/TextContent.Subtitle"
            android:text="@string/disusun_oleh"
            android:layout_marginBottom="8dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:id="@+id/imgpenyusun"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/penyusun"
                style="@style/TextContent"
                android:layout_toRightOf="@id/imgpenyusun"
                android:text="@string/masrizal_eka_yulianto"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <Button
            android:id="@+id/link"
            style="@style/ButtonGeneral"
            android:text="@string/kunjungi"/>
    </LinearLayout>
</ScrollView>